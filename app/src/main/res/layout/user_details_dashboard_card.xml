<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:id="@+id/floatingCardView"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="@dimen/padding_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_yellow_tag"
            android:translationY="-10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello!"
                    android:textSize="@dimen/dimen_25dp"
                    android:textColor="#6B3024"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/dimen_20dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="0.6">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:layout_marginStart="@dimen/dimen_20dp">
                        <TextView
                            android:id="@+id/userName_floatCard"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/dimen_16dp"
                            android:maxLength="16"
                            android:fontFamily="@font/poppinsregular"
                            android:gravity="center"
                            android:textColor="#6B3024"/>

                        <TextView
                            android:layout_width="4px"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:background="#6B3024"/>
                        <TextView
                            android:id="@+id/userRoalrole_floatCard"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                            android:textSize="@dimen/dimen_16dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#6B3024"
                            android:singleLine="true"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="1.3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/dimen_20dp">

                        <TextView
                            android:id="@+id/Addrrss_floatCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:drawablePadding="@dimen/padding_10"
                            android:drawableStart="@drawable/ic_small_markr"
                            android:textSize="@dimen/dimen_12dp"
                            android:fontFamily="@font/poppinsregular"/>

                        <TextView
                            android:id="@+id/ChangeLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:textColor="#1A50A5"
                            android:paddingStart="22sp"
                            android:text="@string/change_location"
                            android:textSize="@dimen/dimen_12dp"
                            android:fontFamily="@font/poppins_bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>