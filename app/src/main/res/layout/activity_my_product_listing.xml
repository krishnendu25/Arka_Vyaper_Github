<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.UI.MyProductListing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ic_path892" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="What would you like to sell?"
            android:textColor="#6B3024"
            android:textSize="@dimen/dimen_20dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myProductList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="80dp"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_alignParentBottom="true"
                android:weightSum="2"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/dimen_18dp"
                    android:fontFamily="@font/arialbold"
                    android:gravity="center"
                    android:onClick="setAddProducts"
                    android:text="Add Product"
                    android:background="@drawable/green_btn_ripple_botton2"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:onClick="saveProduct"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18dp"
                    android:fontFamily="@font/arialbold"
                    android:gravity="center"
                    android:background="@drawable/green_btn_ripple"
                    android:layout_weight="1"/>

               <!-- <TextView
                    android:layout_width="200dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/green_btn_ripple"


                    android:paddingStart="@dimen/padding_10"
                    android:paddingEnd="@dimen/padding_10"
                    />-->
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>