<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.arkavyapar.View.UI.AdreessActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ic_path892" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="My Address"
                    android:textColor="#6B3024"
                    android:textSize="@dimen/dimen_25dp" />

                <EditText
                    android:id="@+id/searchsrcED"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:backgroundTint="#707070"
                    android:drawableStart="@drawable/ic_search"
                    android:paddingStart="@dimen/padding_10"
                    android:drawablePadding="@dimen/padding_10"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    android:layout_marginEnd="@dimen/dimen_25dp"
                    android:hint="Search for area, landmark or city"
                    android:layout_marginTop="@dimen/padding_10"
                    android:textColor="#707070"
                    android:textSize="@dimen/dimen_14dp"
                    android:inputType="textPostalAddress"
                    android:fontFamily="@font/poppinsregular"
                    android:textColorHint="#707070"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    android:layout_marginEnd="@dimen/dimen_25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/address1Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#707070"
                        android:hint="Address line 1"
                        android:textColor="#707070"
                        android:inputType="textPostalAddress"
                        android:fontFamily="@font/poppinsregular"
                        android:textColorHint="#707070"/>
                    <EditText
                        android:id="@+id/address2Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#707070"
                        android:hint="Address line 2"
                        android:inputType="textPostalAddress"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="@dimen/padding_10"
                        android:textColor="#707070"
                        android:textColorHint="#707070"/>
                    <EditText
                        android:id="@+id/pincodeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#707070"
                        android:hint="Pincode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="@dimen/padding_10"
                        android:textColor="#707070"
                        android:textColorHint="#707070"/>
                    <EditText
                        android:id="@+id/cityTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#707070"
                        android:layout_marginTop="@dimen/padding_10"
                        android:hint="City"
                        android:inputType="textPostalAddress"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="#707070"
                        android:textColorHint="#707070"/>
                    <EditText
                        android:id="@+id/StateTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#707070"
                        android:layout_marginTop="@dimen/padding_10"
                        android:hint="State"
                        android:inputType="textPostalAddress"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="#707070"
                        android:textColorHint="#707070"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nextAddress"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@drawable/green_btn_ripple"
                    android:fontFamily="@font/arialbold"
                    android:gravity="center"
                    android:paddingStart="@dimen/padding_10"
                    android:onClick="nextPageFromMyAddress"
                    android:paddingEnd="@dimen/padding_10"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingStart="@dimen/padding_5"
                    android:text="@string/skip_for_now"
                    android:textColor="#606060"
                    android:textSize="@dimen/dimen_16dp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>